<div class="container">
  <div class="form-container">
    <h1>Actualizar Datos</h1>
    <form>
      <!-- <label for="id">ID:</label>
        <input type="number" name="id" id="id" required /> -->

      <label for="siteName">Nombre del sitio:</label>
      <input type="text" name="siteName" id="siteName" required />

      <label for="userName">Nombre de usuario:</label>
      <input type="text" name="userName" id="userName" required />

      <label for="encryptedpassword">Password</label>
      <input
        type="password"
        name="encryptedpassword"
        id="encryptedpassword"
        required
      />

      <label for="note">Nota:</label>
      <textarea name="note" id="note" rows="3"></textarea>

      <label for="url">URL:</label>
      <input type="url" name="url" id="url" />

      <label for="securityStatus">Estado de seguridad:</label>
      <input type="text" name="securityStatus" id="securityStatus" required />

      <button type="submit" class="newButton">Actualizar</button>
    </form>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", async () => {
    let data;
    let id = 20;
    // Función para obtener los datos de la API
    const apiID = async () => {
      // const id = id; // Este podría ser el id que deseas buscar
      let response = await fetch(
        `http://localhost:5071/api/PasswordEntries/${id}`
      );
      data = await response.json(); // Obtenemos y procesamos la respuesta JSON

      // Aquí debes actualizar el formulario con los datos
      const siteNameInput = document.getElementById(
        "siteName"
      ) as HTMLInputElement;
      const userNameInput = document.getElementById(
        "userName"
      ) as HTMLInputElement;
      const encryptedPasswordInput = document.getElementById(
        "encryptedpassword"
      ) as HTMLInputElement;
      const noteTextArea = document.getElementById(
        "note"
      ) as HTMLTextAreaElement;
      const urlInput = document.getElementById("url") as HTMLInputElement;
      const securityStatusInput = document.getElementById(
        "securityStatus"
      ) as HTMLInputElement;

      if (siteNameInput) siteNameInput.value = data?.siteName || "";
      if (userNameInput) userNameInput.value = data?.userName || "";
      if (encryptedPasswordInput)
        encryptedPasswordInput.value = data?.encryptedpassword || "";
      if (noteTextArea) noteTextArea.value = data?.note || "";
      if (urlInput) urlInput.value = data?.url || "";
      if (securityStatusInput)
        securityStatusInput.value = data?.securityStatus || "";
    };

    // Llamar a la API solo una vez cuando el DOM esté listo
    await apiID();
  });
</script>

<style>
